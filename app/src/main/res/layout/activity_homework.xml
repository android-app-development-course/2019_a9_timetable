<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/p8"
        android:scaleType="fitXY"
        android:tint="#75ffffff"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    <LinearLayout
        android:id="@+id/lay_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lay_gundong"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ring"
            />

        <Button
            android:id="@+id/btn_state"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/setbar_bg_white"
            android:text="@string/app_name"
        />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/setbar_bg_white"
            android:text="@string/add"
            android:textStyle="bold" />
    </LinearLayout>
     <ScrollView
         android:layout_below="@+id/lay_state"
         android:id="@+id/lay_gundong"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        >
         <LinearLayout
             android:id="@+id/HomeworkList"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
         </LinearLayout>
     </ScrollView>
    <Button
        android:layout_below="@+id/lay_gundong"
        android:id="@+id/input_homework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_homework"
        android:background="@drawable/btn_yuanjiao"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    </RelativeLayout>
    <!--android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        /-->
</android.support.constraint.ConstraintLayout>
